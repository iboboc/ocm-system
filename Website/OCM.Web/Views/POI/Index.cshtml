@model OCM.MVC.Models.POIBrowseModel

@{
    ViewBag.Title = "Browse Charging Locations";
}

<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.min.js" integrity="sha256-VazP97ZCwtekAsvgPBSUwPFKdrwD3unUfSGVYrahUqU=" crossorigin="anonymous"></script>

<h2 data-localize="ocm.general.browsePOI">Browse Charging Locations</h2>

<div class="alert alert-info">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    <strong data-localize="ocm.infoText.tip">Tip:</strong> <span data-localize="ocm.infoText.searching.quickWay">If you just need a quick way to find your nearest charging location you can also try our</span> <a href="https://map.openchargemap.io" data-localize="ocm.infoText.searching.webApp" class="alert-link">Map</a>, <span data-localize="ocm.infoText.searching.searchAppStore">especially on mobile devices. You can also search your device App Store for a version you can carry around.</span>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="well well-sm">
            <partial name="_POISearch" model="(OCM.MVC.Models.POIBrowseModel)Model" />

        </div>

    </div>
    <div class="col-md-6">
        @if (ViewBag.FormattedAddress != null)
        {
            <div><strong>Searching location: @ViewBag.FormattedAddress</strong></div>
        }

        <partial name="_POIList" model="Model.POIList" />

    </div>

</div>
