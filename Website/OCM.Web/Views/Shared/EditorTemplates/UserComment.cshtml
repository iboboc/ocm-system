@model OCM.API.Common.Model.UserComment

@using (Html.BeginForm("Comment", "POI"))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    @Html.HiddenFor(model => model.ID)
    @Html.HiddenFor(model => model.ChargePointID)

    <div class="form-group">
        <div>
            @Html.LabelFor(model => model.CommentType)
        </div>
        <div>
            @Html.DropDownListFor(model => model.CommentType.ID, (SelectList)ViewBag.ReferenceData.UserCommentTypeList)
            @Html.ValidationMessageFor(model => model.CommentType)
        </div>
    </div>
    <div class="form-group">
        <div>
            @Html.LabelFor(model => model.CheckinStatusType)
        </div>
        <div>
            @Html.DropDownListFor(model => model.CheckinStatusType.ID, (SelectList)ViewBag.ReferenceData.CheckinStatusTypeList)
            @Html.ValidationMessageFor(model => model.CheckinStatusType)
        </div>
    </div>
    <div class="form-group">
        <div>
            @Html.LabelFor(model => model.Comment)
        </div>
        <div>
            @Html.EditorFor(model => model.Comment)
            @Html.ValidationMessageFor(model => model.Comment)
        </div>
    </div>
    <div class="form-group">
        <div>
            @Html.LabelFor(model => model.Rating)
        </div>
        <div>
            @Html.DropDownListFor(model => model.Rating, (SelectList)ViewBag.ReferenceData.RatingTypeList)
            @Html.ValidationMessageFor(model => model.Rating)
        </div>
    </div>
    <div class="form-group">
        <div>
            @Html.LabelFor(model => model.RelatedURL)
        </div>
        <div>
            @Html.EditorFor(model => model.RelatedURL)
            @Html.ValidationMessageFor(model => model.RelatedURL)
        </div>
    </div>

    <partial name="_TermsLink"/>

    <p>
        <input type="submit" class="btn btn-primary" value="Submit Comment" />
    </p>
}

<script>
    $(document).ready(function () {
        //FIXME: use bootstrap styles for form controls
        $(".text-box, select, textarea").addClass("form-control");
    });

</script>